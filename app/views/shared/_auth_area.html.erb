<% if user_signed_in? %>
  <div class="avatar mr-2">
    <div class="w-10 rounded-full">
      <%= image_tag current_user.image %>
    </div>
  </div>
  <div class="hidden md:block md:mr-6">
    <p><%= current_user.name %></p>
  </div>
  <%= link_to t("header.sign_out"), destroy_user_session_path,
        data: { turbo_method: :delete },
        class: "btn bg-active bg-base-300 font-semibold py-2 px-4" %>
<% else %>
  <%= button_to user_google_oauth2_omniauth_authorize_path,
        method: :post, data: { turbo: false }, class: "btn btn-outline bg-white" do %>
    <svg aria-label="Google logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><g><path d="m0 0H512V512H0" fill="#fff"></path><path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path><path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path><path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path><path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path></g></svg>
    <span><%= t("shared.sign_in_with", provider: t("shared.providers.google")) %></span>
  <% end %>
<% end %>

